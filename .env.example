# URL used by the web app to talk to the HTTP API (apps/back-end)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3002

# Port the HTTP API listens on
PORT=3002

# Public URL used by the web app to connect to the Socket Gateway
NEXT_PUBLIC_SOKCET_GETWAY_URL=http://localhost:3003

# Secret the API uses to sign and verify JWT tokens (min length 10 chars)
JWT_SECRET=dev-jwt-secret

# Port the Socket Gateway listens on (defaults to 3001 if unset)
GATEWAY_PORT=3003

# Redis connection string to enable socket scaling (leave empty to disable)
REDIS_URL=redis://:redispass@localhost:6379

# URL the Socket Gateway calls to validate bearer tokens from clients
AUTH_INTROSPECT_URL=http://localhost:3002/auth/introspect

# Milliseconds to cache successful introspection responses
AUTH_INTROSPECT_CACHE_TTL_MS=30000