FROM node:22-alpine

# Install pnpm
RUN corepack enable && corepack prepare pnpm@10.19.0 --activate

# Install dependencies needed for Prisma
RUN apk add --no-cache openssl

# Set working directory
WORKDIR /app

# Expose port
EXPOSE 3002

# Default command (will be overridden in docker-compose)
CMD ["sh"]

